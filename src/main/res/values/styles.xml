<resources>

    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_second</item>
    </style>

    <style name="AppTheme.Translucent" parent="android:Theme.Translucent.NoTitleBar.Fullscreen" />

    <style name="AppDialogTheme" parent="android:Theme.Holo.Dialog.Alert">
        <item name="android:background">@color/material_blue_grey_900</item>
    </style>
</resources>
